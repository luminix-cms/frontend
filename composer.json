{
    "name": "luminix/frontend",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Luminix\\Frontend\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Luminix\\Frontend\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "Bruno Polo",
            "email": "brunopolo@poli.ufrj.br"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0",
        "illuminate/database": "^11.0",
        "luminix/backend": "0.x-dev",
        "arandu/reducible": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit-dom-assertions": "^3.2"
    },
    "scripts": {
        "test": "@php vendor/bin/testbench package:test",
        "test:coverage": "phpunit --coverage-html coverage",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url": "../backend"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Luminix\\Frontend\\FrontendServiceProvider"
            ]
        }
    }
}